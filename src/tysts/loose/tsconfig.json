{
  "compilerOptions": {
    "target": "es2016",
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    // It affects the tysts but not the functionality:
    "noImplicitAny": false,
    "strictNullChecks": false,
    // Actually affects the functionality:
    "exactOptionalPropertyTypes": false,
    "outDir": "./.ts"
  },
  "include": ["**/*.ts"]
}
